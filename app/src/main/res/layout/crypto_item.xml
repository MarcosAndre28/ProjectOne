<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/crypto_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/txt_icon_crypto"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/primary"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sdp" />

        <TextView
            android:id="@+id/txt_name_crypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="BIT COIN"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:layout_toEndOf="@id/txt_icon_crypto"
            android:layout_alignTop="@id/txt_icon_crypto"/>

        <TextView
            android:id="@+id/txt_value_crypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 80.000"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_alignStart="@id/txt_name_crypto"
            android:layout_below="@id/txt_name_crypto"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>